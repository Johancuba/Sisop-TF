<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <title>Adminia - Dashboard CMS</title>
    
    <style>
        :root {
            --primary-color: #667eea;
            --secondary-color: #764ba2;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
        }
        
        body {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            min-height: 100vh;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .header-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .header-card h1 {
            color: var(--primary-color);
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .header-card p {
            color: #6b7280;
            margin-bottom: 20px;
        }
        
        .entity-card {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.2s, box-shadow 0.2s;
            height: 100%;
        }
        
        .entity-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .entity-card .icon-container {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            margin-bottom: 15px;
        }
        
        .entity-card h3 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #1f2937;
        }
        
        .entity-card p {
            color: #6b7280;
            font-size: 0.9rem;
            margin-bottom: 15px;
        }
        
        .entity-card .count {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }
        
        .btn-action {
            width: 100%;
            margin-top: 10px;
            border-radius: 8px;
            padding: 10px;
            font-weight: 600;
            transition: all 0.2s;
        }
        
        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            color: white;
        }
        
        .btn-primary-custom:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        
        .icon-products { background: linear-gradient(135deg, #10b981, #059669); color: white; }
        .icon-categories { background: linear-gradient(135deg, #f59e0b, #d97706); color: white; }
        .icon-users { background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; }
        .icon-audit { background: linear-gradient(135deg, #3b82f6, #2563eb); color: white; }
        
        .count-products { color: #10b981; }
        .count-categories { color: #f59e0b; }
        .count-users { color: #8b5cf6; }
        .count-audit { color: #3b82f6; }
        
        .quick-links {
            background: white;
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .quick-links h4 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 15px;
        }
        
        .quick-link-btn {
            display: block;
            padding: 12px 20px;
            margin-bottom: 10px;
            background: #f3f4f6;
            border: none;
            border-radius: 8px;
            text-align: left;
            transition: all 0.2s;
            text-decoration: none;
            color: #1f2937;
            font-weight: 500;
        }
        
        .quick-link-btn:hover {
            background: var(--primary-color);
            color: white;
            transform: translateX(5px);
        }
        
        .quick-link-btn i {
            margin-right: 10px;
        }
        
        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            display: inline-block;
        }
        
        .status-online {
            background: #d1fae5;
            color: #065f46;
        }
        
        .test-section {
            background: white;
            border-radius: 12px;
            padding: 25px;
            margin-top: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .test-section h4 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 20px;
        }
        
        .test-result {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 10px;
            font-family: monospace;
        }
        
        .test-success {
            background: #d1fae5;
            border-left: 4px solid #10b981;
        }
        
        .test-error {
            background: #fee2e2;
            border-left: 4px solid #ef4444;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        
        <!-- Header -->
        <div class="header-card">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1><i class="bi bi-grid-3x3-gap-fill"></i> Dashboard Adminia</h1>
                    <p class="mb-0">Panel de administración de contenidos digitales para PYMES</p>
                    <span class="status-badge status-online mt-2">
                        <i class="bi bi-circle-fill"></i> Sistema Online
                    </span>
                </div>
                <div class="col-md-4 text-end">
                    <img src="https://cdn-icons-png.flaticon.com/128/2991/2991148.png" alt="Adminia" width="80">
                </div>
            </div>
        </div>
        
        <!-- Entity Cards -->
        <div class="row">
            
            <!-- Productos -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="entity-card">
                    <div class="icon-container icon-products">
                        <i class="bi bi-box-seam"></i>
                    </div>
                    <h3>Productos</h3>
                    <p>Gestión de productos con imágenes y metadatos embebidos</p>
                    <div class="count count-products" id="count-products">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <button class="btn btn-action btn-primary-custom" onclick="testEntity('productos')">
                        <i class="bi bi-play-fill"></i> Probar API
                    </button>
                </div>
            </div>
            
            <!-- Categorías -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="entity-card">
                    <div class="icon-container icon-categories">
                        <i class="bi bi-tags"></i>
                    </div>
                    <h3>Categorías</h3>
                    <p>Organización y clasificación de productos</p>
                    <div class="count count-categories" id="count-categories">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <button class="btn btn-action btn-primary-custom" onclick="testEntity('categorias')">
                        <i class="bi bi-play-fill"></i> Probar API
                    </button>
                </div>
            </div>
            
            <!-- Usuarios -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="entity-card">
                    <div class="icon-container icon-users">
                        <i class="bi bi-people"></i>
                    </div>
                    <h3>Usuarios</h3>
                    <p>Control de acceso con roles (admin/editor)</p>
                    <div class="count count-users" id="count-users">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <button class="btn btn-action btn-primary-custom" onclick="testEntity('usuarios')">
                        <i class="bi bi-play-fill"></i> Probar API
                    </button>
                </div>
            </div>
            
            <!-- Auditorías -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="entity-card">
                    <div class="icon-container icon-audit">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3>Auditorías</h3>
                    <p>Registro de eventos y trazabilidad</p>
                    <div class="count count-audit" id="count-auditorias">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <button class="btn btn-action btn-primary-custom" onclick="testEntity('auditorias')">
                        <i class="bi bi-play-fill"></i> Probar API
                    </button>
                </div>
            </div>
            
        </div>
        
        <!-- Quick Links & Test Section -->
        <div class="row">
            <div class="col-md-4">
                <div class="quick-links">
                    <h4><i class="bi bi-lightning-charge"></i> Accesos Rápidos</h4>
                    <a href="/swagger" class="quick-link-btn">
                        <i class="bi bi-book"></i> Documentación Swagger
                    </a>
                    <a href="/api" class="quick-link-btn">
                        <i class="bi bi-code-slash"></i> API Endpoints
                    </a>
                    <a href="https://github.com" target="_blank" class="quick-link-btn">
                        <i class="bi bi-github"></i> Repositorio GitHub
                    </a>
                    <a href="#" class="quick-link-btn" onclick="testConnection()">
                        <i class="bi bi-database"></i> Test MongoDB
                    </a>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="test-section">
                    <h4><i class="bi bi-terminal"></i> Panel de Pruebas</h4>
                    <p class="text-muted">Verifica la conectividad de las APIs y base de datos</p>
                    
                    <div id="test-results">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Haz clic en "Probar API" en cada tarjeta para verificar la conexión
                        </div>
                    </div>
                    
                    <button class="btn btn-success w-100 mt-3" onclick="testAllEntities()">
                        <i class="bi bi-play-circle"></i> Probar Todas las APIs
                    </button>
                </div>
            </div>
        </div>
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Cargar contadores al iniciar
        window.addEventListener('DOMContentLoaded', () => {
            loadCounts();
        });
        
        async function loadCounts() {
            const entities = ['productos', 'categorias', 'usuarios', 'auditorias'];
            
            for (const entity of entities) {
                try {
                    const response = await fetch(`/api/${entity}`);
                    const data = await response.json();
                    
                    let count = 0;
                    if (data.success && Array.isArray(data.data)) {
                        count = data.data.length;
                    }
                    
                    document.getElementById(`count-${entity}`).textContent = count;
                } catch (error) {
                    document.getElementById(`count-${entity}`).innerHTML = 
                        '<i class="bi bi-exclamation-triangle" style="font-size: 1.5rem;"></i>';
                }
            }
        }
        
        async function testEntity(entity) {
            const resultsDiv = document.getElementById('test-results');
            resultsDiv.innerHTML = '<div class="alert alert-info"><i class="bi bi-hourglass-split"></i> Probando ' + entity + '...</div>';
            
            try {
                const response = await fetch(`/api/${entity}`);
                const data = await response.json();
                
                if (response.ok) {
                    resultsDiv.innerHTML = `
                        <div class="test-result test-success">
                            <strong>✅ ${entity.toUpperCase()} - OK</strong><br>
                            Status: ${response.status}<br>
                            Registros: ${data.data ? data.data.length : 0}<br>
                            Endpoint: GET /api/${entity}
                        </div>
                    `;
                } else {
                    throw new Error('Error en la respuesta');
                }
            } catch (error) {
                resultsDiv.innerHTML = `
                    <div class="test-result test-error">
                        <strong>❌ ${entity.toUpperCase()} - ERROR</strong><br>
                        Error: ${error.message}<br>
                        Endpoint: GET /api/${entity}
                    </div>
                `;
            }
        }
        
        async function testAllEntities() {
            const entities = ['categorias', 'productos', 'usuarios', 'auditorias'];
            const resultsDiv = document.getElementById('test-results');
            resultsDiv.innerHTML = '<div class="alert alert-info"><i class="bi bi-hourglass-split"></i> Probando todas las APIs...</div>';
            
            let results = '';
            
            for (const entity of entities) {
                try {
                    const response = await fetch(`/api/${entity}`);
                    const data = await response.json();
                    
                    if (response.ok) {
                        results += `
                            <div class="test-result test-success">
                                <strong>✅ ${entity.toUpperCase()}</strong> - 
                                ${data.data ? data.data.length : 0} registros
                            </div>
                        `;
                    } else {
                        throw new Error('Error');
                    }
                } catch (error) {
                    results += `
                        <div class="test-result test-error">
                            <strong>❌ ${entity.toUpperCase()}</strong> - Error de conexión
                        </div>
                    `;
                }
            }
            
            resultsDiv.innerHTML = results;
            loadCounts();
        }
        
        async function testConnection() {
            const resultsDiv = document.getElementById('test-results');
            resultsDiv.innerHTML = '<div class="alert alert-info"><i class="bi bi-hourglass-split"></i> Probando MongoDB...</div>';
            
            try {
                const response = await fetch('/api/categorias');
                if (response.ok) {
                    resultsDiv.innerHTML = `
                        <div class="test-result test-success">
                            <strong>✅ MONGODB CONECTADO</strong><br>
                            Base de datos: adminia_db<br>
                            Estado: Online<br>
                            Arquitectura: NoSQL con embebidos
                        </div>
                    `;
                } else {
                    throw new Error('No se pudo conectar');
                }
            } catch (error) {
                resultsDiv.innerHTML = `
                    <div class="test-result test-error">
                        <strong>❌ MONGODB ERROR</strong><br>
                        ${error.message}
                    </div>
                `;
            }
        }
    </script>
</body>
</html>
